@page "/PaymentSuccess/{Family_ID}/{ReturnUrl}"

@layout FrontendLayout

<div class="container">
    <div class="row mt-lg-80 mt-3 mb-4">
        <div class="col-12">
            <div class="segment-container">
                @TextProvider.Get("PAYMENT_SUCCESSFULL")
            </div>
            @if (ShowCloseTag == true)
            {
                <div style="display:none !important;" class="close-custom-popup">
                    @Uri.UnescapeDataString(ReturnUrl)
                </div>
            }
        </div>
    </div>
</div>       