@page "/Organization/Application/Comitted/{ID}"

@layout FrontendLayout

<AuthorizeView>
    <Authorized>
        <div class="container">
            <div class="row mt-lg-80 mt-3 mb-4">
                <div class="col-12">
                    <h5>
                        @TextProvider.Get("FRONTEND_APPLICATION_COMITTED_SUCCESSFULL")
                    </h5>
                    <div class="extra-small-element-separator"></div>
                    <div class="segment-container">
                        @TextProvider.Get("FRONTEND_APPLICATION_COMITTED_DESCRIPTION")
                    </div>
                    <div class="element-separator"></div>
                    <div class="segment-button-container">
                        <button class="btn btn-primary" @onclick="BackToData">@TextProvider.Get("BUTTON_BACK_TO_MY_ORGANIZATIONS")</button>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin RedirectURL="@NavManager.Uri"></RedirectToLogin>
    </NotAuthorized>
</AuthorizeView>
