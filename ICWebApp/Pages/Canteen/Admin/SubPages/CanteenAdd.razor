@page "/Canteen/Admin/Canteen/Add/{ID}"
@layout MainLayout

@if (Data != null)
{

    <div class="segment-container custom-background-default">
        <EditForm Model="Data" autocomplete="none">
            <DataAnnotationsValidator />
            <div class="segment-title custom-color-primary">
                @if (ID == "New")
                {
                    <h3 class="custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_ADD")</h3>
                }
                else
                {
                    <h3 class="custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_EDIT")</h3>
                }
            </div>
            <div class="small-element-separator"></div>
            <div class="segment-separator custom-border-primary"></div>
            <div class="small-element-separator"></div>            
            <div class="form-group form-group-small">
                <div class="segment-title custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_TITLE_GENERAL")</div>
            </div>
            <div class="extra-small-element-separator"></div>
            <div class="form-group form-group-small">
                <label class="form-label custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_NAME")</label>
                <InputText @bind-Value="Data.Name" class="form-control" autocomplete="none"></InputText>
            </div>
            <div class="extra-small-element-separator"></div>
            <div class="form-group form-group-small">
                <label class="form-label custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_ADDRESS")</label>
                <InputText @bind-Value="Data.AddressInfo" class="form-control" autocomplete="none"></InputText>
            </div>
            <div class="extra-small-element-separator"></div>
            <div class="form-group form-group-small">
                <label class="form-label custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_SCHOOL")</label>
                <TelerikMultiSelect Data="@Schools"
                                    @bind-Value="@SelectedSchooolIds"
                                    ValueField="@nameof(CANTEEN_School.ID)"
                                    TextField="@nameof(CANTEEN_School.Name)"
                                    Placeholder="@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_SCHOOL_SELECTOR")"
                                    Id="schoo-multiselect" Width="100%">
                </TelerikMultiSelect>
            </div>   
            <div class="extra-small-element-separator"></div>
            <div class="form-group form-group-small">
                <label class="form-label custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_SPOTS")</label>
                <InputNumber @bind-Value="Data.TotalSpots" class="form-control" autocomplete="none"></InputNumber>
            </div>
            <div class="extra-small-element-separator"></div>
            <div class="form-group form-group-small">
                <label class="form-label custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_PRICE")</label>
                <TelerikNumericTextBox @bind-Value="Data.PricePerUse" class="form-control" Format="C"></TelerikNumericTextBox>
            </div>
            <div class="small-element-separator"></div>            
            <div class="form-group form-group-small">
                <div class="segment-title custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_TITLE_CONTACT")</div>
            </div>
            <div class="extra-small-element-separator"></div>
            <div class="form-group form-group-small">
                <label class="form-label custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_EMAIL")</label>
                <label class="form-label form-detail custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_EMAIL_DETAIL")</label>
                <InputText @bind-Value="Data.EMail" type="email" class="form-control" autocomplete="none"></InputText>
            </div>
          
            <div class="small-element-separator"></div>
            <div class="segment-separator custom-border-primary"></div>
            <div class="small-element-separator"></div>            
            <div class="form-group form-group-small">
                <div class="segment-title custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_CANTEEN_TITLE_DAYS")</div>
            </div>

            <div class="extra-small-element-separator"></div>
            <div class="form-group">
                <label class="form-label custom-color-primary">@TextProvider.Get("MAINMENU_BACKEND_CANTEEN_PERIOD")</label>
                <div class="extra-small-element-separator"></div>
                <div class="week-day-selector">
                    <TelerikButtonGroup SelectionMode="@ButtonGroupSelectionMode.Multiple">
                        <ButtonGroupToggleButton @bind-Selected="@Data.DayMo">@TextProvider.Get("MONDAY_SHORT")</ButtonGroupToggleButton>
                        <ButtonGroupToggleButton @bind-Selected="@Data.DayTue">@TextProvider.Get("TUESDAY_SHORT")</ButtonGroupToggleButton>
                        <ButtonGroupToggleButton @bind-Selected="@Data.DayWed">@TextProvider.Get("WEDNESDAY_SHORT")</ButtonGroupToggleButton>
                        <ButtonGroupToggleButton @bind-Selected="@Data.DayThu">@TextProvider.Get("THURSDAY_SHORT")</ButtonGroupToggleButton>
                        <ButtonGroupToggleButton @bind-Selected="@Data.DayFri">@TextProvider.Get("FRIDAY_SHORT")</ButtonGroupToggleButton>
                        @*<ButtonGroupToggleButton @bind-Selected="@Data.DaySat">@TextProvider.Get("SATURDAY_SHORT")</ButtonGroupToggleButton>
                        <ButtonGroupToggleButton @bind-Selected="@Data.DaySun">@TextProvider.Get("SUNDAY_SHORT")</ButtonGroupToggleButton>*@
                    </TelerikButtonGroup>
                </div>         
            </div>
            <div class="small-element-separator"></div>
            <div class="form-group">
                <label for="@Data.IsActive" class="form-label">@TextProvider.Get("CANTEEN_IS_ACTIVE")</label>
                <div>
                    <TelerikSwitch @bind-Value="Data.IsActive" OnLabel="@TextProvider.Get("YES")" OffLabel="@TextProvider.Get("NO")" Width="65px"
                                   Class="list-item-switch"></TelerikSwitch>
                </div>
            </div>

            <div class="segment-button-toolbar">
                <TelerikButton ButtonType="ButtonType.Button" ThemeColor="Secondary" Icon="SvgIcon.X" Class="k-standalone-button"
                                OnClick="@ReturnToPreviousPage">@TextProvider.Get("BUTTON_CANCEL")</TelerikButton>
                <TelerikButton ButtonType="ButtonType.Button" ThemeColor="Primary" Icon="SvgIcon.ArrowRight" Class="k-standalone-button"
                                OnClick="@SaveForm">@TextProvider.Get("BUTTON_SAVE")</TelerikButton>
            </div>
        </EditForm>
    </div>
}