@if(!string.IsNullOrEmpty(Title))
{
    string sectionCSS = "mb-30";

    if (!SectionSpace)
    {
        sectionCSS = "";
    }

    <section class="it-page-section @sectionCSS" id="@(ID.Replace(" ", "-"))">
        @if (!IsCard)
        {
            <div class="anchor-title-container">
                @if (IsSmallTitle)
                {
                    <h4>@Title</h4>
                }
                else
                {
                    <h2 class="mb-3">@Title</h2>
                }
                @if (OnModify.HasDelegate)
                {
                    string modifyText = "ANCHOR_MODIFY_DATA_BUTTON";

                    if (!string.IsNullOrEmpty(ModifyTextCode))
                    {
                        modifyText = ModifyTextCode;
                    }
                    if (EnableModify)
                    {
                        <a @onclick="OnModifyClicked" class="text-decoration-none" data-focus-mouse="false"><span class="text-button-sm-semi t-primary">@TextProvider.Get(modifyText)</span></a>
                    }
                }
            </div>
            @if (HasParagraph)
            {
                <p class="text-paragraph mb-0">
                    @ChildContent
                </p>
            }
        }
        else
        {
            <div class="cmp-card mb-40 mt-2">
                <div class="card has-bkg-grey shadow-sm p-big">
                    <div class="card-header border-0 p-0 mb-lg-30">
                        <div class="anchor-title-container">
                            @if (IsSmallTitle)
                            {
                                <h3>@Title</h3>
                            }
                            else
                            {
                                <h2 class="mb-3">@Title</h2>
                            }
                            @if (OnModify.HasDelegate)
                            {
                                string modifyText = "ANCHOR_MODIFY_DATA_BUTTON";

                                if (!string.IsNullOrEmpty(ModifyTextCode))
                                {
                                    modifyText = ModifyTextCode;
                                }
                                if (EnableModify)
                                {
                                    <a @onclick="OnModifyClicked" class="text-decoration-none" data-focus-mouse="false"><span class="text-button-sm-semi t-primary">@TextProvider.Get(modifyText)</span></a>
                                }
                            }
                        </div>
                        @if (SubTitle != null && SubTitle.Trim().Length > 0)
                        {
                            <p class="subtitle-small mb-0">@((MarkupString)(SubTitle))</p>
                        }
                    </div>
                    <div class="card-body p-0">
                        <div class="cmp-info-button-card">
                            <div class="card p-3 p-lg-4">
                                @ChildContent
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>
}